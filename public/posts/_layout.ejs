<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%= site_title %></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../assets/css/normalize.css">
    <link rel="stylesheet" href="../assets/css/main.css">
    <link href='https://fonts.googleapis.com/css?family=Droid+Sans|Inconsolata|Vollkorn' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <%- partial("../_header") %>
      <article>
        <% var posts = []; %>

        <% for(var slug in public.posts._data){ %>
          <% var post = public.posts._data[slug] %>
          <% post.slug = slug; %>
          <% posts.push(public.posts._data[slug]);%>
        <% } %>

        <% posts.sort(function(a,b){ a = new Date(a.published_on); b = new Date(b.published_on); return b<a?-1:b>a?1:0; }).slice(0, 10) %>

        <% for(var i = 0; i < posts.length; i++) { %>
          <% if(posts[i].slug == current.source) { %>
            <% var prev = posts[i-1] %>
            <% var next = posts[i+1] %>
            <time><%= posts[i].date %></time>
          <% } %>
        <% } %>

        <%- yield %>
      </article>
      <%- partial("../_footer") %>
  </body>
  <script src="../assets/js/main.js"></script>
</html>
